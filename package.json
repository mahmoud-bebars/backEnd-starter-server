{
  "name": "auth_backend_server",
  "version": "0.1.0",
  "description": "backend-server for Authentication & authorization with NodeJs & TypesCript powered by ExpressJs & PostgresSQL",
  "main": "server.ts",
  "scripts": {
    "start": "npm install && nodemon src/server.ts",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "build": "npx tsc",
    "clean": "rimraf ./dist",
    "test": "npm install && db-migrate --env test up && tsc && ENV=test jasmine && db-migrate --env test reset  && npm run clean",
    "test2": "npx tsc && jasmine",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "author": "M.bebars",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "password-generator": "^2.3.2",
    "pg": "^8.7.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "typescript": "^4.7.4",
    "tsc-watch": "^4.2.9",
    "ts-node": "^10.8.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jasmine": "^4.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.0",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "jasmine": "^4.2.1",
    "jasmine-ts": "^0.4.0",
    "supertest": "^6.2.3",
    "jasmine-spec-reporter": "^7.0.0",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "eslint": "^8.18.0",
    "rimraf": "^3.0.2"
  }
}
